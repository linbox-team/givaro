prefix=@prefix@
exec_prefix=@exec_prefix@
includedir=@includedir@
libdir=@libdir@

major=`echo @VERSION@ | cut -d'.' -f1`
minor=`echo @VERSION@ | cut -d'.' -f2`
micro=`echo @VERSION@ | cut -d'.' -f3`
decvr=$((((($major*100)+$minor)*100)+$micro))


cflags=false
libs=false


usage()
{
    cat <<EOF
Usage: givaro-config [OPTION]

Known values for OPTION are:

  --prefix		show Givaro installation prefix 
  --libs		print library linking information
  --cflags		print pre-processor and compiler flags
  --help		display this help and exit
  --version		output version information string (eg @VERSION@)
  --decimal-version     output version information number (that is $decvr, also available in givconfig.h)

EOF

    exit $1
}

if test $# -eq 0; then
    usage 1
fi

while test $# -gt 0; do
    case "$1" in
    -*=*) optarg=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'` ;;
    *) optarg= ;;
    esac

    case "$1" in
    --prefix=*)
	prefix=$optarg
	;;

    --prefix)
	echo $prefix
	;;

    --version)
	echo @VERSION@
	exit 0
	;;

    --decimal-version)
	echo $decvr
	exit 0
	;;

    --help)
	usage 0
	;;

    --cflags)
        echo -I${includedir} @REQUIRED_FLAGS@
	;;

    --libs)
        echo -L${libdir} -lgivaro @GMP_LIBS@
       	;;

    *)
	usage
	exit 1
	;;
    esac
    shift
done
echo

exit 0
